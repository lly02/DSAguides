@inherits LayoutComponentBase

@inject NavigationManager _nagivation

<div class="page h-100">
    <main class="h-100 d-flex flex-column">
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="/images/favicon.png" alt="site-logo" />
                    DSAguides
                </a>
                <button class="navbar-toggler" @onclick="NavbarToggle" type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="@NavbarCollapsed navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @IsCurrent("data-structures")" href="/data-structures/array">Data Structures</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link @IsCurrent("algorithms")" href="/algorithms/searching">Algorithms</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div id="page-content" class="flex-grow-1">
            @Body
        </div>
    </main>
</div>

@code {
    private string NavbarCollapsed => _navbarCollapsed ? "collapse" : "";
    private bool _navbarCollapsed = true;

    private void NavbarToggle()
    {
        _navbarCollapsed = !_navbarCollapsed;
    }

    private string IsCurrent(string route)
    {
        if (_nagivation.Uri.Contains(route)) return "active";
        return "";
    } 
}
