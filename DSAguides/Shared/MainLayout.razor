@inherits LayoutComponentBase

<div class="page h-100">
    <main class="h-100">
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="/images/favicon.png" alt="site-logo" />
                    DSAguides
                </a>
                <button class="navbar-toggler" @onclick="NavbarToggle" type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="@NavbarCollapsed navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/data-structures/array">Data Structures</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="/">Algorithms</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div id="page-content">
            @Body
        </div>
    </main>
</div>

@code {
    string NavbarCollapsed => _navbarCollapsed ? "collapse" : "";

    bool _navbarCollapsed = true;

    void NavbarToggle()
    {
        _navbarCollapsed = !_navbarCollapsed;
    }
}
